{% schema %}
  {
    "class":"store_locator",
    "name": "Store Locator",
    "settings": [
      {
        "type":"image_picker",
        "id":"main_image",
        "label":"Main Image"
      },
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      }
    ],
    "blocks": [
      {
        "type":"store-locator",
        "name":"Store Locator Block",
        "settings": [
          {
            "type":"richtext",
            "id":"para",
            "label":"Para"
          }
        ]
      }
    ],

    "presets": [
      {
        "name":"Store Locator"
      }
    ]
  }
{% endschema %}

