
<div class="faq_main country_section">
  <div class="faq_wrap page-width">
    <div class="faq_inner">
      {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
      <div class="faq_item">
        {% if block.settings.title != blank  %}
        <button type="button" class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height {% if forloop.first %} is-open {% endif %} {% if force_open %} is-open{% endif %}" aria-controls="Product-content-{{ block.id }}"
          {% if force_open %}aria-expanded="true"{% endif %}>
          <span class="collapsible-trigger__layout">
            <span class="collapsible_title"><img src="{{ block.settings.flag_img | img_url: 'master'  }}">{{ block.settings.title }}</span>
            {%- render 'collapsible-icons' -%}
          </span>
        </button>
        {% endif %}  
        <div id="Product-content-{{ block.id }}" class="collapsible-content collapsible-content--all {% if forloop.first %} is-open {% endif %} {% if force_open %} is-open{% endif %}" {% if force_open %}style="height: auto;"{% endif %}>
          <div class="collapsible-content__inner rte">
            <ul class="country_list">
             {% for i in (1..12) %}
              {% assign main_title = 'title_' | append: i %}
              {% assign main_description = 'text_' | append: i %}
               {% if  block.settings[main_title] != blank or  block.settings[main_description] != blank %}
              <li class="country_item">
                <div class="country_wrap">
                  <h3>{{ block.settings[main_title] }}</h3>
                  <ol class="country_link_list">
                      {{ block.settings[main_description] }}
                  </ol>
                </div>
              </li>
               {% endif %}   
              {% endfor %} 
            </ul>
          </div>
        </div>
      </div>
      {% endfor %}
      {% endif %}  
      
    </div>
  </div>
</div>


